# Environment Configuration for LinkedIn Automation Platform

# Required Environment Variables
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
NODE_ENV=development

# Database Configuration (Railway PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Encryption Configuration (Must be exactly 64 hex characters for AES-256)
ENCRYPTION_SECRET=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# LinkedIn OAuth Configuration
LINKEDIN_CLIENT_ID=your-linkedin-app-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-app-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:5000/api/posts/oauth/callback

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# AI Provider API Keys (Optional - users can provide their own)
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key
OPENAI_API_KEY=sk-your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key

# Server Configuration
PORT=5000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10
AI_RATE_LIMIT_MAX=20
POST_RATE_LIMIT_MAX=50

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=86400000

# Production Settings (uncomment for production)
# NODE_ENV=production
# FRONTEND_URL=https://your-production-domain.com
# LINKEDIN_REDIRECT_URI=https://your-production-domain.com/api/posts/oauth/callback
PORT=5000
NODE_ENV=development
